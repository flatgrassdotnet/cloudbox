<html>
	<head>
		<title>reboxed</title>
		<link rel="stylesheet" href="/assets/reboxed.css" type="text/css">
	</head>
	<body>
		<div class="header">
			<div class="navbar">
				{{if or (not .InGame) (ne .Category "map")}}
					{{if ne .SteamID ""}}
						<a href="/browse/mine" id="mine"><div class="navbutton"></div><br>Mine<br></a>
					{{end}}
					<a href="/browse/entities" id="entity"><div class="navbutton"></div><br>Entities</a>
					<a href="/browse/weapons" id="weapon"><div class="navbutton"></div><br>Weapons</a>
					<a href="/browse/props" id="prop"><div class="navbutton"></div><br>Props</a>
					<a href="/browse/saves" id="savemap"><div class="navbutton"></div><br>Saves</a>
					{{if not .InGame}}
						<a href="/browse/maps" id="map"><div class="navbutton"></div><br>Maps</a>
					{{end}}
				{{end}}
			</div>
			<div class="search" style="-webkit-box-flex: 1; width: 100%;">
				<form>
					<input id="searchbox" name="search" placeholder="Search" value="{{.Search}}" {{if .InGame}}onclick="window.location='gmod\://startspawnmenufocus/'" onmouseout="window.location='gmod\://endspawnmenufocus/'"{{end}}>
				</form>
			</div>
			<div class="navbar">
				<a href="{{.PrevLink}}" id="prev"{{if eq .PrevLink "#"}} class="disabled"{{end}}><div class="navbutton"></div><br>Previous</a>
				<a href="{{.NextLink}}" id="next"{{if eq .NextLink "#"}} class="disabled"{{end}}><div class="navbutton"></div><br>Next</a>
			</div>
		</div>
		<div class="topclouds"></div>
		<div class="content">
			{{if and (.InGame) (eq .Category "savemap")}}
				<div class="savetools">
					{{if ne .SteamID ""}}
						<a href="garrysmod://action/save">Save Current Map</a>
					{{end}}
					<a href="garrysmod://action/clean">Clean Current Map</a>
				</div>
			{{end}}
			{{if ne .Search ""}}
				<h1>Searched for {{.Search}}</h1>
			{{end}}
			{{range .Packages}}
				{{if and ($.InGame) (eq $.Category "savemap") (ne $.MapName .Dataname)}}
					{{continue}}
				{{end}}
				<div class="item">
					<a href="garrysmod://{{if (eq .Type "map")}}install{{else}}spawn{{end}}/{{.Type}}/{{.ID}}/{{.Revision}}">
						<div class="thumb" style="background-image: url('//img.reboxed.fun/{{.ID}}_thumb_128.png'), url('/assets/rustmb/missing.svg');"></div>
						<div class="name">
							{{.Name}}
						</div>
					</a>
					<div class="info">
						<div class="clouds"></div>
							<div class="metabox">
								<div class="metabox-left">
								<div class="meta-thumb"><div class="img" style="background-image: url('//img.reboxed.fun/{{.ID}}_thumb_128.png'), url('/assets/rustmb/missing.svg');"></div></div>
									<div class="meta-info">
										<div class="meta-name">{{.Name}}</div>
										<div class="meta-user">
											{{if eq .AuthorName ""}}
												<img src="/assets/gmodpink.png">
												<div class="meta-uploaded">Recovered from Toybox</div>
											{{else}}
												<img src="{{StripHTTPS .AuthorIcon}}">
												<div class="meta-uploaded">Uploaded {{.Uploaded.Format "02 January 2006"}}, by</div>
												<div class="meta-username">{{if eq .AuthorName ""}}Unknown{{else}}{{.AuthorName}}{{end}}</div>
											{{end}}
										</div>
									</div>
								</div>
							<div class="metabox-right">
							{{if ne .Description ""}}
								<div class="meta-desc">{{.Description}}</div>
							{{end}}
							</div>
						</div>
					</div>
				</div>
			{{end}}
		</div>
	</body>
	<div class="bottomclouds"></div>
</html>
