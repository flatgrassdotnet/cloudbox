<html>
	<head>
		<title>reboxed</title>
		<link rel="stylesheet" href="/assets/reboxed.css" type="text/css">
	</head>
	<body>
		<div class="header">
			<div class="navbar">
				{{if or (not .InGame) (ne .Category "map")}}
					{{if .InGame}}
						<a href="/browse/mine" id="mine"><div class="navbutton"></div><br>Mine<br></a>
					{{end}}
					<a href="/browse/entities" id="entity"><div class="navbutton"></div><br>Entities</a>
					<a href="/browse/weapons" id="weapon"><div class="navbutton"></div><br>Weapons</a>
					<a href="/browse/props" id="prop"><div class="navbutton"></div><br>Props</a>
					<a href="/browse/saves" id="savemap"><div class="navbutton"></div><br>Saves</a>
					{{if not .InGame}}
						<a href="/browse/maps" id="map"><div class="navbutton"></div><br>Maps</a>
					{{end}}
				{{end}}
			</div>
			<div class="search" style="-webkit-box-flex: 1; width: 100%;">
				<form>
					<input id="searchbox" name="search" placeholder="Search" value="{{.Search}}" {{if .InGame}}onclick="window.location='gmod\://startspawnmenufocus/'" onmouseout="window.location='gmod\://endspawnmenufocus/'"{{end}}>
				</form>
			</div>
			<div class="navbar">
				<a href="{{.PrevLink}}" id="prev"{{if eq .PrevLink "#"}} class="disabled"{{end}}><div class="navbutton"></div><br>Previous</a>
				<a href="{{.NextLink}}" id="next"{{if eq .NextLink "#"}} class="disabled"{{end}}><div class="navbutton"></div><br>Next</a>
			</div>
		</div>
		<div class="underheader"></div>
		<div class="content">
			{{if and (.InGame) (.Category | eq "savemap")}}
				<div class="savetools">
					<a href="garrysmod://action/save">Save Current Map</a>
					<a href="garrysmod://action/clean">Clean Current Map</a>
				</div>
			{{end}}
			{{if ne .Search ""}}
				<h1>Searched for {{.Search}}</h1>
			{{end}}
			{{range .Packages}}
				{{if and ($.InGame) (eq $.Category "savemap") (ne $.MapName .Dataname)}}
					{{continue}}
				{{end}}
				<div class="item">
					<a {{if $.InGame}}href="garrysmod://{{if (eq .Type "map")}}install{{else}}spawn{{end}}/{{.Type}}/{{.ID}}/{{.Revision}}"{{else}}onclick="reboxed.GetPackage('{{.Type}}', {{.ID}}, {{.Revision}})"{{end}}>
						<div class="thumb" style="background-image: url('//img.reboxed.fun/{{.ID}}_thumb_128.png'), url('/assets/rustmb/missing.svg');">
							<div class="overlay">
								<span class="description">{{.Description}}</span>
							</div>
						</div>
						<div class="name">
							{{.Name}}
						</div>
					</a>
				</div>
			{{end}}
		</div>
	</body>
	<div class="bottomclouds"></div>
</html>
