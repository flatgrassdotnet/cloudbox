<html>
	<head>
		<title>reboxed</title>
		<link rel="stylesheet" href="/assets/reboxed.css" type="text/css">
	</head>
	<body>
		<div class="header">
			<div class="navbar" style="-webkit-box-flex: 1; width: 100%;">
				{{if or (not .InGame) (ne .Category "map")}}
					{{if .InGame}}
						<a href="/browse/mine"><div class="navbutton" id="mine"></div><br>Mine<br></a>
					{{end}}
					<a href="/browse/entities"><div class="navbutton" id="entity"></div><br>Entities</a>
					<a href="/browse/weapons"><div class="navbutton" id="weapon"></div><br>Weapons</a>
					<a href="/browse/props"><div class="navbutton" id="prop"></div><br>Props</a>
					<a href="/browse/saves"><div class="navbutton" id="savemap"></div><br>Saves</a>
					{{if not .InGame}}
						<a href="/browse/maps"><div class="navbutton" id="map"></div><br>Maps</a>
					{{end}}
					<a></a>
				{{end}}
				<a href="{{.PrevLink}}"><div class="navbutton" id="prev"></div><br>Previous</a>
				<a href="{{.NextLink}}"><div class="navbutton" id="next"></div><br>Next</a>
			</div>
			<div class="search">
				<form>
					<input id="searchbox" name="search" placeholder="Search" onclick="window.location='gmod\://startspawnmenufocus/'" onmouseout="window.location='gmod\://endspawnmenufocus/'">
				</form>
			</div>
		</div>
		<div class="underheader"></div>
		<div class="content">
			{{if and (.InGame) (.Category | eq "savemap")}}
			<div class="savetools">
				<a href="garrysmod://action/save">Save Current Map</a>
				<a href="garrysmod://action/clean">Clean Current Map</a>
			</div>
			{{end}}
			{{if ne .Search ""}}
				<h1>Searched for {{.Search}}</h1>
			{{end}}
			{{range .Packages}}
				{{if and ($.InGame) (eq $.Category "savemap") (ne $.MapName .Dataname)}}
					{{continue}}
				{{end}}
				<div class="item">
					<a href="garrysmod://{{if (eq .Type "map")}}install{{else}}spawn{{end}}/{{.Type}}/{{.ID}}/{{.Revision}}">
						<div class="thumb" style="background-image: url('//img.reboxed.fun/{{.ID}}_thumb_128.png'), url('/assets/rustmb/missing.png');">
							<img src="/assets/rustmb/border{{randborder}}.png">
						</div>
						{{.Name}}
					</a>
				</div>
			{{end}}
		</div>
	</body>
</html>
